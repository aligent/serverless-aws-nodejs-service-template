{
    "name": "application",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "services/test-service/src",
    "targets": {
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "cdk deploy",
                "cwd": "{projectRoot}"
            }
        },
        "deploy:staging": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "cdk deploy stg/**",
                "cwd": "{projectRoot}"
            }
        },
        "destroy:staging": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "cdk destroy stg/**",
                "cwd": "{projectRoot}"
            }
        },
        "stacks": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "cdk list",
                "cwd": "{projectRoot}"
            }
        }
    },
    "tags": ["application", "cdk", "aligent"]
}

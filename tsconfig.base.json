{
    "extends": "@aligent/ts-code-standards/tsconfigs-base",
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "exactOptionalPropertyTypes": false,
        "noUncheckedSideEffectImports": true,
        "paths": {
            "@aligent/cdk-service-plugin": ["tools/cdk-service-plugin/src/index.ts"],
            "@aligent/cdk-utils": ["tools/cdk-utils/src/index.ts"],
            "@aligent/openapi-plugin": ["tools/openapi-plugin/src/index.ts"],
            "@aligent/serverless-plugin": ["tools/serverless-plugin/src/index.ts"],
            "@services/cdk-service": ["services/cdk-service/src/index.ts"],
            "@services/legacy-service": ["services/legacy-service/src/index.ts"]
        },
        "types": ["node", "vitest", "vitest/globals"]
    }
}

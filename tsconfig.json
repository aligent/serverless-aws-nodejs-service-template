{
    "extends": "@tsconfig/node18-strictest/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "lib",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./tests/**/*.ts"],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".build/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "types"
    ]
}

{
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "ES2022",
        "outDir": "lib",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "module": "ES2022",
        "resolveJsonModule": true,
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".build/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "types"
    ]
}
{
    "extends": "@tsconfig/node18-strictest/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "exactOptionalPropertyTypes": false,
        "noPropertyAccessFromIndexSignature": false,
        "outDir": "lib",
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "ignoreDeprecations": "5.0"
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        ".serverless/**/*",
        ".build/**/*",
        "_warmup/**/*",
        ".vscode/**/*",
        "types"
    ]
}
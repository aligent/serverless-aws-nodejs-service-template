{
    "name": "@aligent/cdk-utils",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "tools/cdk-utils/src",
    "projectType": "library",
    "tags": ["cdk", "utils"],
    "targets": {
        "typecheck": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "{projectRoot}",
                "color": true,
                "command": "tsc --noEmit --pretty"
            }
        },
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/tools/cdk-utils",
                "main": "tools/cdk-utils/src/index.ts",
                "tsConfig": "tools/cdk-utils/tsconfig.lib.json",
                "assets": ["tools/cdk-utils/*.md"],
                "generatePackageJson": true
            }
        }
    }
}

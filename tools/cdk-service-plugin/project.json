{
    "name": "@aligent/cdk-service-plugin",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "tools/cdk-service-plugin/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/tools/cdk-service-plugin",
                "main": "tools/cdk-service-plugin/src/index.ts",
                "tsConfig": "tools/cdk-service-plugin/tsconfig.lib.json",
                "assets": [
                    "tools/cdk-service-plugin/*.json",
                    {
                        "input": "tools/cdk-service-plugin/src",
                        "glob": "**/!(*.ts)",
                        "output": "src"
                    },
                    {
                        "input": "tools/cdk-service-plugin/src",
                        "glob": "**/*.d.ts",
                        "output": "src"
                    }
                ]
            }
        }
    }
}
